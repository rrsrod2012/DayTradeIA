# ===========================
# daytrade-ia — backend .env
# ===========================
PORT=4000

# ------- Custos / Execução -------
COST_PER_TRADE_POINTS=2
SLIPPAGE_POINTS=1
TICK_SIZE_POINTS=1

# ------- Confirmação MTF / Cooldown -------
REQUIRE_MTF_CONFIRM=1
MTF_CONFIRM_TF=M15
COOLDOWN_SMART=1
COOLDOWN_FAIL_N=2
COOLDOWN_BLOCK_CANDLES=8

# ------- Confluências -------
# Habilita filtro por VWAP diário (ancorado na abertura)
ENGINE_VWAP_FILTER=1

# ------- Logger -------
LOG_JSON=1
LOG_LEVEL=info

# ------- Micro-modelo (FastAPI) -------
# Endpoint do microserviço de IA para /predict
MICRO_MODEL_URL=http://localhost:8000

# ===========================
# Importação CSV (opcional)
# ===========================
MT_CSV_PATH=
MT_SYMBOL=WIN
MT_TIMEFRAME=M1
MT_DELIMITER=;
MT_HEADER=time,open,high,low,close,volume
MT_TZ_OFFSET=-03:00
MT_CSV_WATCHERS=
MT_HEARTBEAT_SEC=10
MT_MIN_INTERVAL_MS=1000
MT_CSV_MAX_SAMPLES=0
MT_CSV_LOG_SAMPLES=0
CHOKIDAR_USEPOLLING=0
CHOKIDAR_INTERVAL=100
PRISMA_SKIP_DUPLICATES=0
PRISMA_UPSERT_CONCURRENCY=8
